{
  "exclude": [
    "**/node_modules",
    "**/dist/",
    "www",
    ".scratch/",
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2017"],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "stripInternal": true,
  }
}
