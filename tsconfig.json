{
  "include": [
    "src",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.md",
    "types/jsx.d.ts",
    "./typings.d.ts",
  ],
  "exclude": [
    "node_modules",
    "**/__mocks__/**",
    "./scratch",
    "stencil.config.ts"
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": ["dom", "es2015", "es2017"],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "stripInternal": true
  }
}
