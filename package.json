{
  "name": "@viewdo/x",
  "private": true,
  "version": "0.1.0",
  "license": "MIT",
  "homepage": "https://github.com/viewdo/x-ui#readme",
  "bugs": {
    "url": "https://github.com/viewdo/x-ui/issues",
    "email": "project@hostname.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/viewdo/x-ui.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test"
    }
  },
  "scripts": {
    "npm:install": "npx yarn",
    "build": "yarn workspace @viewdo/x-ui build",
    "start": "yarn workspace @viewdo/x-ui start",
    "test": "yarn workspace @viewdo/x-ui test",
    "--- lint ---": "---------------",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint './packages/core/src/**/*{.ts,.tsx}'",
    "lint:css": "stylelint '/packages/core/*.scss' --allow-empty-input",
    "lint:husky": "lint-staged",
    "--- misc ---": "---------------",
    "gs:push": "gsutil cp -r ./www gs://viewdo-static/x-ui",
    "docker:build": "docker build -t viewdo/x-ui-docs .",
    "docker:push": "docker push viewdo/x-ui-docs"
  },
  "devDependencies": {
    "@babel/core": "7.12.10",
    "@stencil/core": "2.3.0",
    "@stencil/eslint-plugin": "0.3.1",
    "@types/howler": "2.2.1",
    "@types/jest": "26.0.19",
    "@types/node": "14.14.20",
    "@types/puppeteer": "5.4.2",
    "@typescript-eslint/eslint-plugin": "4.12.0",
    "@typescript-eslint/parser": "4.12.0",
    "chalk": "4.1.0",
    "eslint": "7.17.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.22.0",
    "http-proxy-middleware": "1.0.6",
    "husky": "4.3.6",
    "jest": "26.6.3",
    "jest-cli": "26.6.3",
    "lint-staged": "10.5.3",
    "lit-html": "1.3.0",
    "node-fetch": "2.6.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.2.1",
    "puppeteer": "5.5.0",
    "stylelint": "13.8.0",
    "stylelint-config-sass-guidelines": "7.1.0",
    "typescript": "4.1.3",
    "yargs": "16.2.0"
  },
  "resolutions": {
    "**/@typescript-eslint/eslint-plugin": "4.12.0",
    "**/@typescript-eslint/parser": "4.12.0"
  },
  "jest": {
    "preset": "@stencil/core/testing",
    "maxConcurrency": 0,
    "projects": [
      "<rootDir>/packages/core/src/*"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "workspaces": [
    "packages/core",
    "packages/plugins/*",
    "packages/examples/*"
  ],
  "dependencies": {}
}
